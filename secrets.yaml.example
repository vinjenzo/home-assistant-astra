# ============================================================
# SECRETS EXAMPLE - TEMPLATE PER CONFIGURAZIONE
# ============================================================
# Copia questo file come "secrets.yaml" e sostituisci
# i placeholder con i tuoi valori reali.
# ============================================================

# TV LG WebOS - MAC Address per Wake-on-LAN
# Trova il MAC in: Impostazioni TV → Rete → Avanzate
tv_mac_address: "XX:XX:XX:XX:XX:XX"

# Robot Aspirapolvere - Entity ID completo
# Trova in: Developer Tools → States → cerca "vacuum"
robot_entity_id: "vacuum.YOUR_ROBOT_ID"
robot_button_position: "button.YOUR_ROBOT_ID_position_a_7_1"
robot_button_stop: "button.YOUR_ROBOT_ID_stop_clean_a_4_2"
robot_switch_dnd: "switch.YOUR_ROBOT_ID_enable_p_5_1"
robot_select_mode: "select.YOUR_ROBOT_ID_mode_p_2_3"
robot_select_mop: "select.YOUR_ROBOT_ID_mop_mode_p_4_5"
robot_sensor_battery: "sensor.YOUR_ROBOT_ID_battery_level_p_3_1"
robot_sensor_area: "sensor.YOUR_ROBOT_ID_cleaning_area_p_4_3"
robot_sensor_time: "sensor.YOUR_ROBOT_ID_cleaning_time_p_4_2"
robot_sensor_brush: "sensor.YOUR_ROBOT_ID_brush_life_level_p_9_2"
robot_sensor_brush_side: "sensor.YOUR_ROBOT_ID_brush_life_level_p_10_2"
robot_sensor_filter: "sensor.YOUR_ROBOT_ID_filter_life_level_p_11_1"

# Notifiche Mobile - Service completo (con prefisso notify.)
# Trova in: Settings → Mobile App → nome del tuo dispositivo
notify_service: "notify.mobile_app_your_phone"
